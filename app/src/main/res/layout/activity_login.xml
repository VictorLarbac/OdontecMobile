<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_odontec_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@drawable/button"
    tools:context="ti.saude.odontec.odontec.login">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/odontec"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="50dp"
        android:id="@+id/imageView" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="60dp"
        android:id="@+id/linearLayout"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/edittextlogin"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="208dp"
            android:id="@+id/editText"
            android:hint="        Login"
            android:fontFamily="monospace"
            android:textStyle="italic"
            />

        <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:layout_below="@+id/editText"
            android:layout_alignEnd="@+id/editText"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittextlogin"
            android:id="@+id/editText2"
            android:hint="        Senha"
            android:textColorHighlight="#FFFFFF"
            android:fontFamily="monospace"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="   Cadastre-se no Odontec"
            android:textStyle="bold"
            android:id="@+id/tvCadastro"
            android:textColor="#000000"
            android:layout_marginLeft="28dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ENTRAR"
            android:background="@drawable/butodont"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="0dp"
            android:gravity="center"
            android:id="@+id/btEntrar"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true" />

        <com.facebook.login.widget.LoginButton

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/facebook"
            android:layout_gravity="center"
            android:id="@+id/btFace"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true" />

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gogle"
            android:id="@+id/btGmail"
            android:layout_gravity="center"
            android:layout_below="@+id/btFace"
            android:layout_alignStart="@+id/btFace" />



    </LinearLayout>


</RelativeLayout>
