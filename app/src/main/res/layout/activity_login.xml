<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_odontec_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ti.saude.odontec.odontec.login">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/f"
        android:scaleType="fitXY"
        />


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="60dp"
    android:id="@+id/linearLayout">
    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/edittextlogin"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="208dp"
        android:id="@+id/editText"
        android:hint="        Login"
        android:fontFamily="monospace"
        android:textStyle="italic"
        />

    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:layout_below="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittextlogin"
        android:id="@+id/editText2"
        android:hint="        Senha"
        android:textColorHighlight="#FFFFFF"
        android:fontFamily="monospace"
        android:textStyle="italic"/>

</LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTRAR"
        android:background="@drawable/button"
        android:layout_marginTop="350dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="140dp"
        android:id="@+id/btEntrar"
        />

    <Button
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:layout_below="@+id/btEntrar"
        android:layout_alignEnd="@+id/btEntrar"
        android:text="Facebook"
        android:id="@+id/btFace"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Cadastre-se no Odontec"
        android:textStyle="bold"
        android:id="@+id/tvCadastro"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gogle"
        android:id="@+id/btGmail"
        android:layout_below="@+id/btFace"
        android:layout_alignStart="@+id/linearLayout" />


</RelativeLayout>
